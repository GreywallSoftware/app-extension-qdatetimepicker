@import '~quasar-variables'

.q-datetimepicker
  .q-tab-panel,
  .q-card__section
    padding: 0px
    overflow: auto
  .q-date,
  .q-time
    border-radius: 0px
    box-shadow: none
  .tabs-landscape .q-tabs__content .q-tab--full
    height: 50%
    .q-tab__content
      position: relative
      top: 50%
      transform: translateY(-50%)

.q-menu .q-datetimepicker-target-self .q-date,
.q-menu .q-datetimepicker-target-self .q-time
  width: 100% !important
  margin-left: 0 !important
  margin-right: 0 !important

.q-menu .q-datetimepicker-target-self .q-date__content,
.q-menu .q-datetimepicker-target-self .q-time__content
  max-width: 290px
  left: 50%
  transform: translateX(-50%)

.q-menu.scroll
  overflow: unset

.q-datetimepicker.q-card--dark
  background: $grey-9
  .q-tab-panels
    background: $grey-9
